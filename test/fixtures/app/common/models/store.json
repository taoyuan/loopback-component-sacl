{
	"name": "Store",
	"base": "PersistedModel",
	"idInjection": true,
	"options": {
		"validateUpsert": true
	},
	"properties": {
		"id": {
			"type": "string",
			"id": true,
			"required": true
		},
		"name": {
			"type": "string",
			"required": true
		}
	},
	"validations": [],
	"relations": {
		"invoices": {
			"type": "hasMany",
			"model": "Invoice",
			"foreignKey": "storeId"
		},
		"transactions": {
			"type": "hasMany",
			"model": "Transaction",
			"foreignKey": "storeId"
		},
		"products": {
			"type": "hasMany",
			"model": "Product",
			"polymorphic": "store"
		}
	},
	"acls": [
		{
			"accessType": "*",
			"principalType": "ROLE",
			"principalId": "$everyone",
			"permission": "DENY"
		},
		{
			"accessType": "*",
			"principalType": "ROLE",
			"principalId": "$sacl",
			"permission": "ALLOW"
		}
	],
	"security": {
		"actions": {
			"read": "查看店铺",
			"write": {
				"title": "编辑店铺",
				"methods": [
					"create",
					"updateAttributes",
					"upsert"
				]
			},
			"manage": "管理店铺"
		},
		"roles": {
			"member": {
				"title": "店铺成员",
				"actions": [
					"read"
				]
			},
			"manager": {
				"title": "店铺经理",
				"actions": [
					"write",
					"manage"
				],
				"inherits": [
					"member"
				]
			},
			"admin": {
				"title": "管理员",
				"actions": [
					"*"
				],
				"inherits": [
					"manager"
				]
			}
		}
	},
	"methods": {}
}
